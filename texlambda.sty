\newcommand{\lc}[1]{\immediate\write18{\unexpanded{./texlambda -e " #1 " > lc-buf.tex}} \input{lc-buf.tex}}

\WithSuffix\newcommand\lc*[1]{\immediate\write18{\unexpanded{./texlambda " #1 " > lc-buf.tex}} \input{lc-buf.tex}}

\newcommand{\lca}[2]{\immediate\write18{\unexpanded{./texlambda -e -#2 " #1 " > lc-buf.tex}} \input{lc-buf.tex}}

\WithSuffix\newcommand\lca*[2]{\immediate\write18{\unexpanded{./texlambda -#2 " #1 " > lc-buf.tex}} \input{lc-buf.tex}}

